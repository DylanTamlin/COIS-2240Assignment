<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="10"
          vgap="50"
          fx:id="Rootgrid">

    <Text text="Password Manager" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="1" fx:id="RootTitle">
        <font>
            <Font size="35" />
        </font>
    </Text>

    <Button text="Login" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#gotoLogin" fx:id="RootLogin"/>
    <Button text="Register" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#gotoRegister" fx:id="RootRegister"/>
    <Button text="Quit" GridPane.columnIndex="0" GridPane.rowIndex="4" onAction="#exit" fx:id="RootQuit"/>

</GridPane>

